{
  "name": "web-imports",
  "version": "2.0.2",
  "license": "MIT",
  "description": "Enables the browser to import from `node_modules`",
  "keywords": [
    "browser",
    "import",
    "node_modules",
    "transform",
    "cli",
    "grain",
    "grainstack"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/grainstackdev/web-imports.git"
  },
  "bin": "src/cli.js",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test-build": "rm -rf build && cp -r node_modules/grainbox build && web-imports 'build/**/*.{js,mjs}'",
    "test": "tape test.js",
    "prepublishOnly": "npm run test",
    "readme": "git add . && git commit -m 'readme' && npm version patch && git push && npm publish"
  },
  "dependencies": {
    "async": "^3.2.4",
    "chalk": "^5.2.0",
    "escalade": "^3.1.1",
    "glob": "8.1.0",
    "import-meta-resolve": "2.2.1",
    "minimist": "1.2.8"
  },
  "devDependencies": {
    "grainbox": "^0.2.2",
    "tape": "^5.6.3"
  }
}
